{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "src",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules"]
}
